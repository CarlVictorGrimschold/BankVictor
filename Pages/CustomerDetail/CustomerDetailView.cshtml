        <h3>Accounts</h3>
        <table>
            <thead>
                <tr>
                    <th>Account ID</th>
                    <th>Account Type</th>
                    <th>Total Balance</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr>
                        <!-- Länk till transaktionssidan -->
                        <td>
                            <a asp-page="/Transactions/Transactions" asp-route-accountid="@account.AccountId">
                                @account.AccountId
                            </a>
                        </td>
                        <td>@account.Frequency</td>
                        <td>@account.Balance</td>
                        <td>@account.Created</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
